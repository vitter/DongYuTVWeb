<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity">

    <data>

        <import type="android.view.View" />

        <variable
            name="m"
            type="xyz.jdynb.tv.MainViewModel" />

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:visibility="@{m.showCurrentChannel ? View.VISIBLE : View.INVISIBLE}"
            android:padding="30dp"
            android:background="#90000000"
            android:orientation="vertical"
            android:layout_gravity="end|top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="30sp"
                tools:text="12"
                android:text="@{String.valueOf(m.currentIndex + 1)}"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold"
                android:text="@{m.currentChannelModel.channelName}"
                tools:text="CCTV-1"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <Button
            android:id="@+id/btn_menu"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:layout_marginStart="40dp"
            android:alpha="0.5"
            android:backgroundTint="#50FFFFFF"
            android:text="菜单"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </FrameLayout>

</layout>